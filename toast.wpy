<style lang="css">
@keyframes simple-toast-fall-down {
  0% {
    transform: translateY(-40px);
    opacity: 0;
  }
  100% {
    transform: translateY(0px);
    opacity: 1;
  }
}

.simple-toast {
  display: block;
}
.simple-toast-box {
  position: fixed;
  top: 10px;
  left: 0;
  font-size: 12px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.simple-toast-content {
  animation: simple-toast-fall-down 0.5s ease 1;
  background: white;
  padding: 8px 16px;
  border-radius: 4px;
  border: 1px #ddd solid;
  box-shadow: 0 1px 6px rgba(0, 0, 0, 0.2);
  display: flex;
  opacity: 1;
  position: relative;
  top: 0;
  align-items: center;
  word-break: keep-all;
  white-space: nowrap;
}

.simple-toast-icon {
  width: 14px;
  height: 14px;
  margin-right: 10px;
}

.simple-toast-transition {
  transition: top 500ms, opacity 500ms;
  opacity: 0;
  top: -40px;
  position: absolute;
}

.simple-toast-item {
  position: relative;
}

.simple-toast-item + .simple-toast-item {
  margin-top: 5px;
}

@keyframes simple-toast-temp-remove {
  0% {
    height: 35px;
    padding-top: 8px;
    padding-bottom: 8px;
    border: none;
  }
  100% {
    height: 0px;
    padding-top: 0px;
    padding-bottom: 0px;
    border: none;
  }
}

.simple-toast-remove-temp {
  height: 0px;
  animation: simple-toast-temp-remove 0.5s ease 1;
  padding: 8px 16px;
  border-radius: 4px;
  border: 1px #ddd solid;
  box-shadow: 0 1px 6px rgba(0, 0, 0, 0.2);
  display: flex;
  position: relative;
  align-items: center;
  word-break: keep-all;
  white-space: nowrap;
  opacity: 0;
}
</style>
<template>
  <view class="simple-toast">
    <view class="simple-toast-box">
      <view class="simple-toast-item" wx:for="{{tipList}}" wx:for-item="item" wx:key="index">
        <view class="simple-toast-content {{item.isRemove ?'simple-toast-transition':''}}">
          <image src="{{icons[item.type]}}" class="simple-toast-icon" />
          <text>{{item.title}}</text>
        </view>
        <view wx:if="{{item.isRemove}}" class="simple-toast-remove-temp">
          <image src="{{icons[item.type]}}" class="simple-toast-icon" />
          <text>{{item.title}}</text>
        </view>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
const INFO_ICON_DATA = 'data:image/png;base64,'
const SUCCESS_ICON_DATA = 'data:image/png;base64,'
const WARNING_ICON_DATA = 'data:image/png;base64,'
const ERROR_ICON_DATA = 'data:image/png;base64,'

class toastMixin extends wepy.mixin {
  $successTip(title, options) {
    return this.$invoke(this.toastTagName || 'toast', 'success', title, options)
  }

  $errorTip(title, options) {
    return this.$invoke(this.toastTagName || 'toast', 'error', title, options)
  }

  $warningTip(title, options) {
    return this.$invoke(this.toastTagName || 'toast', 'warning', title, options)
  }

  $infoTip(title, options) {
    return this.$invoke(this.toastTagName || 'toast', 'info', title, options)
  }
}

export default class toast extends wepy.component {
  static mixin = toastMixin
  data = {
    icons: {
      info: INFO_ICON_DATA,
      success: SUCCESS_ICON_DATA,
      warning: WARNING_ICON_DATA,
      error: ERROR_ICON_DATA
    },
    id: 0,
    tipList: []
  }

  events = {
  }

  methods = {
    show(arg, options = { type: 'success', duration: 3000 }) {
      return new Promise((resolve, reject) => {
        (typeof arg === 'string') ? options.title = arg : options = { ...options, ...arg }
        options.id = this.id++
        // if (this.id > 999999) { this.id = 0 }
        this.tipList.push(options)
        this.$apply()
        setTimeout(() => {
          this.methods.removeItem.call(this, options.id)
          let callBackData = {
            status: `removed`,
            options
          }
          resolve(callBackData)
        }, options.duration)
      })
    },
    getOptions(arg1, arg2 = {}) {
      let options = (arg2 !== undefined && arg2.type && arg2.type === 'invoke') ? {} : arg2
      if (typeof arg1 === 'string') {
        options.title = arg1
      } else {
        options = { ...options, ...arg1 }
      }
      return options
    },
    removeItem(id) {
      this.tipList.map(item => {
        if (id === item.id) {
          item.isRemove = true
        }
      })
      this.$apply()
      setTimeout(() => {
        this.tipList = this.tipList.filter(item => id !== item.id)
        this.$apply()
      }, 480)
    },
    info(arg1, arg2) {
      let options = this.methods.getOptions(arg1, arg2)
      return this.methods.show.call(this, { ...options, type: 'info' })
    },
    success(arg1, arg2) {
      let options = this.methods.getOptions(arg1, arg2)
      return this.methods.show.call(this, { ...options, type: 'success' })
    },
    warning(arg1, arg2) {
      let options = this.methods.getOptions(arg1, arg2)
      return this.methods.show.call(this, { ...options, type: 'warning' })
    },
    error(arg1, arg2) {
      let options = this.methods.getOptions(arg1, arg2)
      return this.methods.show.call(this, { ...options, type: 'error' })
    }
  }

  onLoad() {
  }
}
</script>
